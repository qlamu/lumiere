<Window x:Class="Lumiere.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lumiere Settings"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D2D"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Settings"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Startup" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <CheckBox Content="Start with Windows" Margin="0,0,0,10"/>

            <TextBlock Text="Hotkeys" FontWeight="SemiBold" Margin="0,20,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Brightness Up" Margin="0,4"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Ctrl+Alt+Up" Foreground="#888888" Margin="0,4"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Brightness Down" Margin="0,4"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="Ctrl+Alt+Down" Foreground="#888888" Margin="0,4"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Day Preset" Margin="0,4"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Ctrl+Alt+D" Foreground="#888888" Margin="0,4"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Night Preset" Margin="0,4"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="Ctrl+Alt+N" Foreground="#888888" Margin="0,4"/>
            </Grid>
        </StackPanel>

        <Button Grid.Row="3"
                Content="Close"
                HorizontalAlignment="Right"
                Padding="20,8"
                Background="#3C3C3C"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
