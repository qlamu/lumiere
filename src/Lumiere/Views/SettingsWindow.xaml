<Window x:Class="Lumiere.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="400"
        Height="520"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1"
                      CaptionHeight="32"
                      CornerRadius="8"
                      ResizeBorderThickness="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="FluentSlider" TargetType="Slider">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Border x:Name="TrackBackground"
                                    Height="4"
                                    CornerRadius="2"
                                    Background="#40FFFFFF"/>
                            <Track x:Name="PART_Track" Margin="10,0">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Grid>
                                                    <Ellipse x:Name="outerCircle"
                                                             Width="20" Height="20"
                                                             Fill="#0078D4"/>
                                                    <Ellipse x:Name="innerCircle"
                                                             Width="8" Height="8"
                                                             Fill="White"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="outerCircle" Property="Width" Value="22"/>
                                                        <Setter TargetName="outerCircle" Property="Height" Value="22"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="outerCircle" Property="Width" Value="18"/>
                                                        <Setter TargetName="outerCircle" Property="Height" Value="18"/>
                                                        <Setter TargetName="innerCircle" Property="Width" Value="6"/>
                                                        <Setter TargetName="innerCircle" Property="Height" Value="6"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Margin="16,0,0,0">
            <TextBlock Text="Settings"
                       FontSize="13"
                       FontFamily="Segoe UI"
                       Foreground="#FFFFFF"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24,8,24,24">

                <!-- Presets Section -->
                <TextBlock Text="Presets"
                           FontSize="14"
                           FontWeight="SemiBold"
                           FontFamily="Segoe UI Variable Display"
                           Foreground="#FFFFFF"
                           Margin="0,0,0,12"/>

                <!-- Day Preset Card -->
                <Border Background="#20FFFFFF" CornerRadius="6" Padding="16,14" Margin="0,0,0,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Day"
                                   FontSize="14"
                                   FontFamily="Segoe UI"
                                   Foreground="#FFFFFF"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   x:Name="DayValueLabel"
                                   Text="100%"
                                   FontSize="14"
                                   FontFamily="Segoe UI"
                                   Foreground="#99FFFFFF"
                                   TextAlignment="Right"/>

                        <Slider x:Name="DaySlider"
                                Grid.Row="1" Grid.ColumnSpan="2"
                                Minimum="0" Maximum="100"
                                Margin="0,10,0,0"
                                Style="{StaticResource FluentSlider}"
                                ValueChanged="DaySlider_ValueChanged"/>
                    </Grid>
                </Border>

                <!-- Night Preset Card -->
                <Border Background="#20FFFFFF" CornerRadius="6" Padding="16,14" Margin="0,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Night"
                                   FontSize="14"
                                   FontFamily="Segoe UI"
                                   Foreground="#FFFFFF"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   x:Name="NightValueLabel"
                                   Text="30%"
                                   FontSize="14"
                                   FontFamily="Segoe UI"
                                   Foreground="#99FFFFFF"
                                   TextAlignment="Right"/>

                        <Slider x:Name="NightSlider"
                                Grid.Row="1" Grid.ColumnSpan="2"
                                Minimum="0" Maximum="100"
                                Margin="0,10,0,0"
                                Style="{StaticResource FluentSlider}"
                                ValueChanged="NightSlider_ValueChanged"/>
                    </Grid>
                </Border>

                <!-- Hotkeys Section -->
                <TextBlock Text="Keyboard shortcuts"
                           FontSize="14"
                           FontWeight="SemiBold"
                           FontFamily="Segoe UI Variable Display"
                           Foreground="#FFFFFF"
                           Margin="0,24,0,12"/>

                <!-- Hotkeys Card -->
                <Border Background="#20FFFFFF" CornerRadius="6" Padding="16,12">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Brightness up" FontSize="14" FontFamily="Segoe UI" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                            <Border Grid.Column="1" Background="#15FFFFFF" CornerRadius="4" Padding="10,4" VerticalAlignment="Center">
                                <TextBlock Text="Ctrl + Alt + Up" FontSize="12" FontFamily="Segoe UI" Foreground="#99FFFFFF"/>
                            </Border>
                        </Grid>

                        <Border Height="1" Background="#15FFFFFF" Margin="0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Brightness down" FontSize="14" FontFamily="Segoe UI" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                            <Border Grid.Column="1" Background="#15FFFFFF" CornerRadius="4" Padding="10,4" VerticalAlignment="Center">
                                <TextBlock Text="Ctrl + Alt + Down" FontSize="12" FontFamily="Segoe UI" Foreground="#99FFFFFF"/>
                            </Border>
                        </Grid>

                        <Border Height="1" Background="#15FFFFFF" Margin="0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Day preset" FontSize="14" FontFamily="Segoe UI" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                            <Border Grid.Column="1" Background="#15FFFFFF" CornerRadius="4" Padding="10,4" VerticalAlignment="Center">
                                <TextBlock Text="Ctrl + Alt + D" FontSize="12" FontFamily="Segoe UI" Foreground="#99FFFFFF"/>
                            </Border>
                        </Grid>

                        <Border Height="1" Background="#15FFFFFF" Margin="0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Night preset" FontSize="14" FontFamily="Segoe UI" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                            <Border Grid.Column="1" Background="#15FFFFFF" CornerRadius="4" Padding="10,4" VerticalAlignment="Center">
                                <TextBlock Text="Ctrl + Alt + N" FontSize="12" FontFamily="Segoe UI" Foreground="#99FFFFFF"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
